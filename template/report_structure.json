{
  "ddr_template": {
    "instructions": "Extract all fields below from the annual reports. For comparative fields, extract for both 2024 and 2023. If data is not found, use 'N/A'. For financial values, extract raw numbers without currency symbols.",
    
    "section_1_company_overview": {
      "s1_1_basic_information": {
        "company_name": {
          "type": "string",
          "description": "Full legal company name including Inc./Corp./Ltd.",
          "example": "NVIDIA Corporation",
          "extraction_hints": ["Look for: Corporation, Inc., Limited, Ltd.", "Check first page, header, or legal entity section"]
        },
        "establishment_date": {
          "type": "string",
          "description": "When company was incorporated or established",
          "format": "Month Year or Year only",
          "example": "April 1993",
          "extraction_hints": ["Keywords: incorporated, established, founded", "Look for: 'incorporated in [date]'", "May be in company history section"]
        },
        "headquarters_location": {
          "type": "string",
          "description": "Primary headquarters location",
          "format": "City, State/Province, Country",
          "example": "Santa Clara, California, USA",
          "extraction_hints": ["Keywords: headquarters, principal office, corporate office", "Include city, state/province, and country"]
        }
      },
      
      "s1_2_core_competencies": {
        "type": "comparative",
        "instruction": "Extract for both 2024 and 2023 reports",
        "fields": {
          "innovation_advantages": {
            "2024": {
              "type": "string",
              "max_length": 500,
              "description": "Company's innovation strengths, R&D capabilities, technological advantages",
              "extraction_hints": ["Look for: R&D investments, patents, innovation strategy", "Technology development, research initiatives", "Competitive advantages through innovation"]
            },
            "2023": {
              "type": "string",
              "max_length": 500,
              "description": "Same as above but from 2023 report"
            }
          },
          "product_advantages": {
            "2024": {
              "type": "string",
              "max_length": 500,
              "description": "Unique product features, market-leading products, product differentiation",
              "extraction_hints": ["Product portfolio strengths", "Unique features or capabilities", "Market-leading positions"]
            },
            "2023": {
              "type": "string",
              "max_length": 500
            }
          },
          "brand_recognition": {
            "2024": {
              "type": "string",
              "max_length": 500,
              "description": "Brand value, market perception, brand strategy",
              "extraction_hints": ["Brand rankings or awards", "Market perception", "Brand communication strategy"]
            },
            "2023": {
              "type": "string",
              "max_length": 500
            }
          },
          "reputation_ratings": {
            "2024": {
              "type": "string",
              "max_length": 500,
              "description": "ESG ratings, sustainability rankings, corporate reputation",
              "extraction_hints": ["ESG scores or ratings", "Sustainability achievements", "Corporate social responsibility"]
            },
            "2023": {
              "type": "string",
              "max_length": 500
            }
          }
        }
      },
      
      "s1_3_mission_vision": {
        "mission_statement": {
          "type": "string",
          "description": "Company's mission statement",
          "default": "N/A",
          "extraction_hints": ["Exact quote if available", "Look for 'Our Mission' or 'Mission Statement'", "May be in letter to shareholders"]
        },
        "vision_statement": {
          "type": "string",
          "description": "Company's vision statement",
          "default": "N/A",
          "extraction_hints": ["Exact quote if available", "Look for 'Our Vision' or 'Vision Statement'"]
        },
        "core_values": {
          "type": "string",
          "description": "Company's stated core values or principles",
          "default": "N/A",
          "extraction_hints": ["Look for 'Core Values' or 'Our Values'", "May be listed as principles or beliefs"]
        }
      }
    },
    
    "section_2_financial_performance": {
      "s2_1_income_statement": {
        "type": "financial_table",
        "years": ["2024", "2023", "2022"],
        "currency": "USD",
        "multiplier": "Millions",
        "instruction": "Extract all values as raw numbers without commas or currency symbols. Negative values can be indicated with minus sign or parentheses.",
        "fields": {
          "revenue": {
            "type": "number",
            "aliases": ["Total Revenue", "Net Revenue", "Sales", "Net Sales"],
            "description": "Total revenue for the period",
            "example": 60922
          },
          "cost_of_goods_sold": {
            "type": "number",
            "aliases": ["COGS", "Cost of Revenue", "Cost of Sales"],
            "description": "Direct costs of producing goods/services",
            "example": 16621
          },
          "gross_profit": {
            "type": "number",
            "formula": "Revenue - COGS",
            "description": "Revenue minus cost of goods sold",
            "example": 44301
          },
          "operating_expense": {
            "type": "number",
            "aliases": ["Operating Expenses", "Total Operating Expenses", "OpEx"],
            "description": "Total operating expenses",
            "example": 11329
          },
          "operating_income": {
            "type": "number",
            "aliases": ["Operating Profit", "EBIT"],
            "description": "Profit from operations",
            "example": 32972
          },
          "net_profit": {
            "type": "number",
            "aliases": ["Net Income", "Net Earnings"],
            "description": "Final profit after all expenses",
            "example": 29760
          },
          "income_before_income_taxes": {
            "type": "number",
            "aliases": ["Pre-tax Income", "EBT"],
            "description": "Income before tax expenses",
            "example": 33818
          },
          "income_tax_expense_benefit": {
            "type": "number",
            "aliases": ["Tax Expense", "Income Tax", "Tax Benefit"],
            "description": "Tax expense or benefit (negative if benefit)",
            "example": 4058
          },
          "interest_expense": {
            "type": "number",
            "aliases": ["Interest and Other Expense"],
            "description": "Interest paid on debt",
            "example": -257
          }
        }
      },
      
      "s2_2_balance_sheet": {
        "type": "financial_table",
        "years": ["2024", "2023", "2022"],
        "currency": "USD",
        "multiplier": "Millions",
        "fields": {
          "total_assets": {
            "type": "number",
            "description": "Sum of all assets",
            "validation": "Should equal Total Equity and Liabilities"
          },
          "current_assets": {
            "type": "number",
            "description": "Assets convertible to cash within one year"
          },
          "non_current_assets": {
            "type": "number",
            "description": "Long-term assets",
            "validation": "Total Assets = Current Assets + Non-Current Assets"
          },
          "total_liabilities": {
            "type": "number",
            "description": "Sum of all liabilities"
          },
          "current_liabilities": {
            "type": "number",
            "description": "Liabilities due within one year"
          },
          "non_current_liabilities": {
            "type": "number",
            "description": "Long-term liabilities"
          },
          "shareholders_equity": {
            "type": "number",
            "aliases": ["Stockholders' Equity", "Total Equity"],
            "description": "Total shareholders' equity"
          },
          "retained_earnings": {
            "type": "number",
            "description": "Accumulated profits not distributed as dividends"
          },
          "total_equity_and_liabilities": {
            "type": "number",
            "description": "Sum of equity and liabilities",
            "validation": "Should equal Total Assets"
          },
          "inventories": {
            "type": "number",
            "description": "Value of inventory"
          },
          "prepaid_expenses": {
            "type": "number",
            "description": "Expenses paid in advance"
          }
        }
      },
      
      "s2_3_cash_flow_statement": {
        "type": "financial_table",
        "years": ["2024", "2023", "2022"],
        "currency": "USD",
        "multiplier": "Millions",
        "fields": {
          "net_cash_flow_from_operations": {
            "type": "number",
            "aliases": ["Operating Activities", "Cash from Operations"],
            "description": "Cash generated from core business operations"
          },
          "net_cash_flow_from_investing": {
            "type": "number",
            "aliases": ["Investing Activities"],
            "description": "Cash used in/from investments"
          },
          "net_cash_flow_from_financing": {
            "type": "number",
            "aliases": ["Financing Activities"],
            "description": "Cash from/used in financing activities"
          },
          "net_increase_decrease_in_cash": {
            "type": "number",
            "description": "Net change in cash position"
          },
          "dividends": {
            "type": "number",
            "description": "Dividends paid to shareholders"
          }
        }
      },
      
      "s2_4_key_financial_metrics": {
        "type": "calculated_metrics",
        "instruction": "Calculate these metrics from the extracted financial data. Format as percentages with 2 decimal places.",
        "years": ["2024", "2023", "2022"],
        "metrics": {
          "gross_margin": {
            "type": "percentage",
            "formula": "(Revenue - COGS) / Revenue * 100",
            "format": "##.##%",
            "example": "72.71%"
          },
          "operating_margin": {
            "type": "percentage",
            "formula": "Operating Income / Revenue * 100",
            "format": "##.##%"
          },
          "net_profit_margin": {
            "type": "percentage",
            "formula": "Net Income / Revenue * 100",
            "format": "##.##%"
          },
          "current_ratio": {
            "type": "percentage",
            "formula": "Current Assets / Current Liabilities * 100",
            "format": "##.##%"
          },
          "quick_ratio": {
            "type": "percentage",
            "formula": "(Current Assets - Inventories - Prepaid Expenses) / Current Liabilities * 100",
            "format": "##.##%"
          },
          "debt_to_equity": {
            "type": "percentage",
            "formula": "Total Liabilities / Shareholders' Equity * 100",
            "format": "##.##%"
          },
          "interest_coverage": {
            "type": "percentage",
            "formula": "Operating Income / Interest Expense * 100",
            "format": "##.##%"
          },
          "asset_turnover": {
            "type": "percentage",
            "formula": "Revenue / Average Total Assets * 100",
            "format": "##.##%",
            "note": "Use N/A if prior year not available for average"
          },
          "return_on_equity": {
            "type": "percentage",
            "formula": "Net Income / Average Shareholders' Equity * 100",
            "format": "##.##%"
          },
          "return_on_assets": {
            "type": "percentage",
            "formula": "Net Income / Average Total Assets * 100",
            "format": "##.##%"
          },
          "effective_tax_rate": {
            "type": "percentage",
            "formula": "Income Tax Expense / Income Before Income Taxes * 100",
            "format": "##.##%"
          },
          "dividend_payout_ratio": {
            "type": "percentage",
            "formula": "Dividends / Net Income * 100",
            "format": "##.##%"
          }
        }
      },
      
      "s2_5_operating_performance": {
        "revenue_by_product_service": {
          "type": "text_with_numbers",
          "years": ["2024", "2023", "2022"],
          "description": "Revenue breakdown by product lines or service categories",
          "format": "Product/Service: $XXM",
          "example": "Compute & Networking: $47,405M Graphics: $13,517M Total: $60,922M"
        },
        "revenue_by_geographic_region": {
          "type": "text_with_numbers",
          "years": ["2024", "2023", "2022"],
          "description": "Revenue breakdown by geographic regions",
          "format": "Region: $XXM",
          "example": "United States: $26,966M Taiwan: $13,405M China (incl. HK): $10,306M"
        }
      }
    },
    
    "section_3_business_analysis": {
      "s3_1_profitability_analysis": {
        "revenue_and_direct_cost_dynamics": {
          "type": "analytical_text",
          "max_length": 800,
          "required_elements": ["Revenue growth analysis", "Gross margin trends", "Product mix impact", "Geographic contribution"],
          "description": "Analyze revenue growth patterns, cost structure changes, and margin evolution"
        },
        "operating_efficiency": {
          "type": "analytical_text",
          "max_length": 600,
          "required_elements": ["Operating margin analysis", "Operating leverage", "Cost control measures"],
          "description": "Analyze operational efficiency and margin improvements"
        },
        "external_and_one_off_impact": {
          "type": "analytical_text",
          "max_length": 600,
          "required_elements": ["Tax rate changes", "One-time items", "Non-recurring impacts"],
          "description": "Analyze impact of taxes and non-recurring items"
        }
      },
      
      "s3_2_financial_performance_summary": {
        "type": "comparative_analysis",
        "years": ["2024", "2023"],
        "perspectives": {
          "comprehensive_financial_health": {
            "type": "text",
            "max_length": 500,
            "required_metrics": ["Total assets", "Shareholders equity", "Current ratio", "Debt-to-equity", "Cash flow"]
          },
          "profitability_and_earnings_quality": {
            "type": "text",
            "max_length": 500,
            "required_metrics": ["Net profit margin", "ROE", "ROA", "Effective tax rate"]
          },
          "operational_efficiency": {
            "type": "text",
            "max_length": 500,
            "required_metrics": ["Operating margin", "Asset turnover", "Gross margin"]
          },
          "financial_risk_identification": {
            "type": "text",
            "max_length": 500,
            "required_elements": ["Liquidity risk", "Debt service", "Concentration risk"]
          },
          "future_performance_projection": {
            "type": "text",
            "max_length": 500,
            "required_elements": ["Growth outlook", "Margin sustainability", "Investment capacity"]
          }
        }
      },
      
      "s3_3_business_competitiveness": {
        "business_model": {
          "type": "comparative_text",
          "years": ["2024", "2023"],
          "description": "Primary business model (subscription, freemium, platform, etc.)",
          "extraction_hints": ["Revenue model", "Value proposition", "Customer segments"]
        },
        "market_position": {
          "type": "comparative_text",
          "years": ["2024", "2023"],
          "description": "Market share and competitive position",
          "extraction_hints": ["Market share percentages", "Industry rankings", "Competitive advantages"]
        }
      }
    },
    
    "section_4_risk_factors": {
      "s4_1_risk_factors": {
        "type": "comparative_risks",
        "years": ["2024", "2023"],
        "risk_categories": {
          "market_risks": {
            "type": "text",
            "max_length": 600,
            "description": "Competition, demand changes, economic conditions",
            "extraction_hints": ["Competitive threats", "Market volatility", "Customer concentration"]
          },
          "operational_risks": {
            "type": "text",
            "max_length": 600,
            "description": "Supply chain, production, technology risks",
            "extraction_hints": ["Supply chain disruption", "Manufacturing issues", "System failures"]
          },
          "financial_risks": {
            "type": "text",
            "max_length": 600,
            "description": "Credit, liquidity, currency, interest rate risks",
            "extraction_hints": ["Debt levels", "Currency exposure", "Interest rate sensitivity"]
          },
          "compliance_risks": {
            "type": "text",
            "max_length": 600,
            "description": "Regulatory, legal, compliance risks",
            "extraction_hints": ["Regulatory changes", "Legal proceedings", "Export controls"]
          }
        }
      }
    },
    
    "section_5_corporate_governance": {
      "s5_1_board_composition": {
        "type": "table_array",
        "description": "List of board members with their positions and compensation",
        "fields": [
          {
            "name": {
              "type": "string",
              "description": "Full name of board member or executive"
            },
            "position": {
              "type": "string",
              "description": "Official title/position"
            },
            "total_income": {
              "type": "string",
              "description": "Total compensation or N/A",
              "default": "N/A"
            }
          }
        ],
        "extraction_hints": ["Look in proxy statement section", "Executive compensation table", "Board of directors section"]
      },
      
      "s5_2_internal_controls": {
        "type": "comparative_perspectives",
        "years": ["2024", "2023"],
        "perspectives": {
          "risk_assessment_procedures": {
            "type": "text",
            "description": "How company assesses and manages risks"
          },
          "control_activities": {
            "type": "text",
            "description": "Internal control mechanisms and processes"
          },
          "monitoring_mechanisms": {
            "type": "text",
            "description": "How controls are monitored and audited"
          },
          "identified_material_weaknesses": {
            "type": "text",
            "description": "Any identified control weaknesses or deficiencies",
            "default": "N/A"
          },
          "effectiveness": {
            "type": "text",
            "description": "Assessment of control effectiveness",
            "default": "N/A"
          }
        }
      }
    },
    
    "section_6_future_outlook": {
      "s6_1_strategic_direction": {
        "type": "comparative_perspectives",
        "years": ["2024", "2023"],
        "perspectives": {
          "mergers_and_acquisition": {
            "type": "text",
            "description": "M&A strategy and plans",
            "extraction_hints": ["Acquisition plans", "M&A strategy", "Integration challenges"]
          },
          "new_technologies": {
            "type": "text",
            "description": "Technology development and adoption plans",
            "extraction_hints": ["R&D focus areas", "Technology investments", "Innovation strategy"]
          },
          "organisational_restructuring": {
            "type": "text",
            "description": "Restructuring or reorganization plans",
            "default": "N/A"
          }
        }
      },
      
      "s6_2_challenges_and_uncertainties": {
        "type": "comparative_perspectives",
        "years": ["2024", "2023"],
        "perspectives": {
          "economic_challenges": {
            "type": "text",
            "description": "Economic challenges such as inflation, recession risks, and shifting consumer behavior",
            "required_elements": ["Inflation impact", "Recession risks", "Consumer behavior changes"]
          },
          "competitive_pressures": {
            "type": "text",
            "description": "Competitive pressures from established players and new entrants",
            "required_elements": ["Competition intensity", "Market share threats", "Disruptive technologies"]
          }
        }
      },
      
      "s6_3_innovation_and_development": {
        "type": "comparative_perspectives",
        "years": ["2024", "2023"],
        "perspectives": {
          "rd_investments": {
            "type": "text",
            "description": "R&D investments and focus areas",
            "extraction_hints": ["R&D spending", "Research priorities", "Innovation strategy"]
          },
          "new_product_launches": {
            "type": "text",
            "description": "Plans for new product introductions",
            "extraction_hints": ["Product pipeline", "Launch timelines", "Market expansion"]
          }
        }
      }
    }
  },
  
  "output_format_instructions": {
    "general_rules": [
      "All financial numbers should be raw values without currency symbols or thousand separators",
      "Percentages should be formatted as '##.##%' (e.g., '72.71%')",
      "Use 'N/A' for any data that cannot be found",
      "Maintain exact field names as specified in this template",
      "For comparative fields, always provide both 2024 and 2023 values",
      "Text fields should be concise but comprehensive"
    ],
    
    "validation_checks": [
      "Balance Sheet: Total Assets must equal Total Equity and Liabilities",
      "All 12 financial metrics must be calculated",
      "Each section must have all required subsections",
      "Comparative sections must have data for both years"
    ],
    
    "quality_guidelines": [
      "Financial data accuracy is critical - double-check all numbers",
      "For text summaries, be factual and specific",
      "Include quantitative data in analytical sections where possible",
      "Ensure consistency between related financial figures"
    ]
  }
}